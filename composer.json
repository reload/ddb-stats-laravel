{
    "name": "danskernesdigitalebibliotek/ddb-stats-laravel",
    "description": "Common stats collecting framework for Lumen based DDB microservices",
    "type": "library",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "illuminate/database": "^6.0",
        "illuminate/support": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "DDB\\Stats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DDB\\Stats\\": "tests/"
        }
    },
    "license": "AGPL",
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.4.2",
        "laravel/lumen-framework": "^6.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DDB\\Stats\\StatisticsServiceProvider"
            ]
        }
    }
}
